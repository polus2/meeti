!!!
%html
  %head
    = javascript_include_tag 'jquery-1.6.1.min.js'
    = javascript_include_tag 'rail'
    = javascript_include_tag 'require'
    %title Meeti
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #world-wrapper
      #base-container
        #header-layer
          %a#logo_link{:href => root_path}
            %h1 Meeti
          = render "auth/header"
          = yield :header
        #content-layer
          #content-left-panel{:class => yield(:left_panel_layout)}
            = yield
          #content-right-panel{:class => yield(:right_panel_layout)}
            = yield :right
          .clearfix

    = yield :spinnets

